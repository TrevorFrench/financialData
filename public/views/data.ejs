<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="public/views/style.css">
    <title>French's Financial Data</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
</head>
<body>

    <div class="headBox">
        <div class="topLeft">
        <b>Insert ticker for financial data:</b>
        <br>
        <br>
        <form name='form1' method='POST' action='/getData'>
            <div class="lineItem">
            <select id="frequency" name="frequency" style="width:40%;">
                <option value="?period=quarter">Quarterly</option>
                <option value="">Annual</option>
            </select>
            <input type='text' name='ticker' style="width:40%; float:right;">
            </div>
            <br>
            <input type='submit' style="width:100%; border: none; color: white; background-color: #008CBA; height: 33px; cursor: pointer;">
        </form>
        </div>
        <div class="topRight">
        <button onclick="graphics1()" style="height:40px; width:50%; float:left;">Toggle Revenue</button>
        <button onclick="graphics2()" style="height:40px; width:50%; float:left;">Toggle Net Profit Margin</button>
        <button onclick="graphics3()" style="height:40px; width:50%; float:left;">Toggle Combined Graph</button>
        <button onclick="graphics4()" style="height:40px; width:50%; float:right;">Toggle Graphics</button>
        <button onclick="graphics5()" style="height:40px; width:50%; float:right;">Toggle Graphics</button>
        <button onclick="graphics6()" style="height:40px; width:50%; float:right;">Toggle Graphics</button>
    
        </div>

    </div>

        <div class="graphics" id="graphics1" style="display:none;">
            <canvas id="myChart" width="200" height="200"></canvas>
        </div>
        
        <div class="graphics" id="graphics2" style="display:none;">
            <canvas id="npmChart" width="200" height="200"></canvas>
        </div>
        
        <div class="graphics" id="graphics3" style="display:none;">
          <canvas id="canvas" width="200" height="200"></canvas>
        </div>
        
        <div class="graphics" id="graphics4" style="display:none;">
            
            <canvas id="myChart" width="200" height="200"></canvas>
            <canvas id="npmChart" width="200" height="200"></canvas>
        </div>
        
        <div class="graphics" id="graphics5" style="display:none;">
            
            <canvas id="myChart" width="200" height="200"></canvas>
            <canvas id="npmChart" width="200" height="200"></canvas>
        </div>
        
        <div class="graphics" id="graphics6" style="display:none;">
            
            <canvas id="myChart" width="200" height="200"></canvas>
            <canvas id="npmChart" width="200" height="200"></canvas>
        </div>
        
        <script>
            function graphics1() {
                var x = document.getElementById("graphics1");
                var y = document.getElementById("graphics2");
                var z = document.getElementById("graphics3");
                var a = document.getElementById("graphics4");
                var b = document.getElementById("graphics5");
                var c = document.getElementById("graphics6");
                
                if (x.style.display === "none") {
                  x.style.display = "block";
                } else {
                  x.style.display = "none";
                }
              
                y.style.display = "none";
                z.style.display = "none";
                a.style.display = "none";
                b.style.display = "none";
                c.style.display = "none";
              }
              
              function graphics2() {
                var x = document.getElementById("graphics1");
                var y = document.getElementById("graphics2");
                var z = document.getElementById("graphics3");
                var a = document.getElementById("graphics4");
                var b = document.getElementById("graphics5");
                var c = document.getElementById("graphics6");
                
                if (y.style.display === "none") {
                  y.style.display = "block";
                } else {
                  y.style.display = "none";
                }
              
                x.style.display = "none";
                z.style.display = "none";
                a.style.display = "none";
                b.style.display = "none";
                c.style.display = "none";
              }
              
              function graphics3() {
                var x = document.getElementById("graphics1");
                var y = document.getElementById("graphics2");
                var z = document.getElementById("graphics3");
                var a = document.getElementById("graphics4");
                var b = document.getElementById("graphics5");
                var c = document.getElementById("graphics6");
                
                if (z.style.display === "none") {
                  z.style.display = "block";
                } else {
                  z.style.display = "none";
                }
              
                x.style.display = "none";
                y.style.display = "none";
                a.style.display = "none";
                b.style.display = "none";
                c.style.display = "none";
              }
              
            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [<%- labels %>].reverse(),
                    datasets: [{
                        label: 'Revenue',
                        data: [<%- data %>].reverse(),
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        </script>
        
        <script>
            var ctx = document.getElementById('npmChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [<%- labels %>].reverse(),
                    datasets: [{
                        label: 'Net Profit Margin',
                        data: [<%- npm %>].reverse(),
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        </script>
        
        <script>
            var chartData = {
                labels: [<%- labels %>].reverse(),
                datasets: [{
                    type: 'line',
                    label: 'Gross Margin',
                    borderColor: 'rgb(54, 162, 235)',
                    borderWidth: 2,
                    fill: false,
                    data: [<%- gm %>].reverse()
                }, {
                    type: 'bar',
                    label: 'Net Profit Margin',
                    backgroundColor: 'rgb(255, 99, 132)',
                    data: [<%- npm %>].reverse(),
                    borderColor: 'white',
                    borderWidth: 2
                }, {
                    type: 'bar',
                    label: 'Free Cash Flow Margin',
                    backgroundColor: 'rgb(75, 192, 192)',
                    data: [<%- fcfm %>].reverse()
                }]
    
            };
            window.onload = function() {
                var ctx = document.getElementById('canvas').getContext('2d');
                window.myMixedChart = new Chart(ctx, {
                    type: 'bar',
                    data: chartData,
                    options: {
                        responsive: true,
                        title: {
                            display: true,
                            text: 'Chart.js Combo Bar Line Chart'
                        },
                        tooltips: {
                            mode: 'index',
                            intersect: true
                        }
                    }
                });
            };
            
        </script>

        <div class="tableDiv">
          <%- statusMessage %>
        </div>

</body>
</html>